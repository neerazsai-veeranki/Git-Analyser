  script.
    $(document).ready(function () {
        let page = 1;
        const perPage = 50;
        let loading = false;
        let allFollowingLoaded = false;

        function createFollowingCard(following) {
            return `
                <div class="following-card">
                    <img src="${following.avatar_url}" alt="${following.login}" class="following-avatar">
                    <div class="following-details">
                        <a href="./viewProfile?id=${following.login}">${following.login}</a>
                        <br>
                        <a href="./viewProfile?id=${following.login}">ID: ${following.id}</a>
                    </div>
                </div>
            `;
        }

        function fetchFollowing() {
            if (loading || allFollowingLoaded) return;
            loading = true;

            $.get(`https://api.github.com/users/ritwickdey/following?page=${page}&per_page=${perPage}`)
                .done(function (data) {
                    if (data.length === 0) {
                        allFollowingLoaded = true;
                    } else {
                        data.forEach(function (following) {
                            const cardHTML = createFollowingCard(following);
                            $('#following-list').append(cardHTML);
                        });
                        page++;
                    }
                    loading = false;
                })
                .fail(function (error) {
                    console.error('Error fetching data:', error);
                    loading = false;
                });
        }

        $(window).scroll(function () {
            if ($(window).scrollTop() + $(window).height() >= $(document).height() - 100) {
                fetchFollowing();
            }
        });

        fetchFollowing();
    });