extends header

block content

  include header 

  div.container
    form.form-inline.mt-4(role='form', action="/getProfiles", method="post")
      div.input-group(style='width: 100%')
        input.form-control(name='keyword', type='text', placeholder='Enter User Name Or Organization')
        div.input-group-append(style='width: 10%')
          button.btn.btn-primary(type='submit', style='width: 100%') 
            i.fa.fa-search
            i.bi.bi-search

  div.container
    if typeof result === 'undefined'
      p
    else if result === null || result.length === 0
      br
      p No profiles Found
    else
      br
      p Resulted Profiles...
      each item in result
        a.card(href='/viewProfile?id='+item.login)
          .card-body
            .row
              .d-flex.text-black
                .flex-shrink-0
                  img.rounded-circle(
                    style="width: 80px; border-radius: 5px;" 
                    alt="Generic placeholder image" 
                    src=item.avatar_url
                    )
              .col
                h5.card-title= item.login
                p.card-text= item.id

  script(src='/routes/search.js')

